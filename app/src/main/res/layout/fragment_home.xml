<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".fragments.HomeFragment">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/primary"
            android:textSize="@dimen/to_doo_splash_text_size"
            android:textFontWeight="@integer/to_doo_splash_text_weight"
            android:text="@string/to_doo_string"
            android:fontFamily="casual"
            android:id="@+id/textView"
            android:layout_marginTop="15dp"
            android:layout_marginStart="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/add_button_background"
            app:tint="@color/button_tint"
            android:backgroundTint="@color/primary"
            app:layout_constraintWidth="60dp"
            app:layout_constraintHeight="60dp"
            app:maxImageSize="90dp"
            app:fabCustomSize="65dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:contentDescription="@string/submit_button_string"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@mipmap/add_button_foreground"/>
    <ImageView
            android:id="@+id/logout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/primary"
            app:layout_constraintWidth="50dp"
            app:layout_constraintHeight="50dp"
            android:layout_marginTop="15dp"
            android:contentDescription="@string/submit_button_string"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:src="@mipmap/logout_button_foreground"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/to_doo_recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@id/add_button"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>